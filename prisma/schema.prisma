generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Concert {
  id              Int              @id @default(autoincrement())
  code            String?          @unique @db.VarChar(20)
  title           String           @db.VarChar(300)
  startDate       String           @map("start_date") @db.VarChar(20)
  endDate         String           @map("end_date") @db.VarChar(20)
  status          ConcertStatus    @default(ONGOING)
  poster          String?          @db.VarChar(2048)
  artist          String?          @db.VarChar(100)
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  sortedIndex     Int?             @unique @map("sorted_index")
  artistId        Int              @map("artist_id")
  ticketSite      String?          @map("ticket_site") @db.VarChar(50)
  ticketUrl       String?          @map("ticket_url") @db.VarChar(2048)
  venue           String?          @db.VarChar(100)
  concertInfos    ConcertInfo[]
  concertSetlists ConcertSetlist[]
  artist_rel      Artist           @relation(fields: [artistId], references: [id])
  cultures        Culture[]
  mdItems         Md[]
  schedules       Schedule[]

  @@index([sortedIndex])
  @@index([artistId], map: "concerts_artist_id_fkey")
  @@fulltext([title, artist])
  @@map("concerts")
}

model Artist {
  id           Int       @id @default(autoincrement())
  artist       String    @db.VarChar(100)
  debutDate    String?   @map("debut_date") @db.VarChar(30)
  debutPlace   String?   @map("debut_place") @db.VarChar(100)
  category     String?   @db.VarChar(30)
  detail       String?   @db.Text
  instagramUrl String?   @map("instagram_url") @db.VarChar(2048)
  keywords     String?   @db.VarChar(100)
  imgUrl       String?   @map("img_url") @db.VarChar(2048)
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  concerts     Concert[]

  @@map("artists")
}

model ConcertInfo {
  id        Int      @id @default(autoincrement())
  concertId Int      @map("concert_id")
  category  String   @db.VarChar(30)
  content   String   @db.VarChar(100)
  imgUrl    String?  @map("img_url") @db.VarChar(2048)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  concert   Concert  @relation(fields: [concertId], references: [id])

  @@index([concertId], map: "concert_info_concert_id_fkey")
  @@map("concert_info")
}

model Md {
  id        Int      @id @default(autoincrement())
  concertId Int      @map("concert_id")
  name      String   @db.VarChar(100)
  price     String?  @db.VarChar(30)
  imgUrl    String?  @map("img_url") @db.VarChar(2048)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  concert   Concert  @relation(fields: [concertId], references: [id])

  @@index([concertId], map: "md_concert_id_fkey")
  @@map("md")
}

model Schedule {
  id          Int      @id @default(autoincrement())
  concertId   Int      @map("concert_id")
  category    String   @db.VarChar(50)
  scheduledAt DateTime @map("scheduled_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  concert     Concert  @relation(fields: [concertId], references: [id])

  @@index([concertId], map: "schedule_concert_id_fkey")
  @@map("schedule")
}

model Culture {
  id        Int      @id @default(autoincrement())
  concertId Int      @map("concert_id")
  content   String   @db.Text
  imgUrl    String?  @map("img_url") @db.VarChar(2048)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  title     String   @db.Text
  concert   Concert  @relation(fields: [concertId], references: [id])

  @@index([concertId])
  @@map("cultures")
}

model ConcertSetlist {
  id           Int         @id @default(autoincrement())
  concertId    Int         @map("concert_id")
  setlistId    Int         @map("setlist_id")
  type         SetlistType @default(ONGOING)
  status       String?     @db.VarChar(10)
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  concertTitle String?     @map("concert_title") @db.VarChar(300)
  setlistTitle String?     @map("setlist_title") @db.VarChar(300)
  concert      Concert     @relation(fields: [concertId], references: [id])
  setlist      Setlist     @relation(fields: [setlistId], references: [id])

  @@index([concertId, setlistId])
  @@index([setlistId], map: "concert_setlists_setlist_id_fkey")
  @@map("concert_setlists")
}

model Setlist {
  id              Int              @id @default(autoincrement())
  title           String           @db.VarChar(300)
  artist          String?          @db.VarChar(100)
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  imgUrl          String?          @map("img_url") @db.VarChar(2048)
  endDate         String           @map("end_date") @db.VarChar(20)
  startDate       String           @map("start_date") @db.VarChar(20)
  venue           String?          @db.VarChar(100)
  concertSetlists ConcertSetlist[]
  setlistSongs    SetlistSong[]

  @@unique([startDate, endDate, id])
  @@map("setlists")
}

model SetlistSong {
  id           Int      @id @default(autoincrement())
  setlistId    Int      @map("setlist_id")
  songId       Int      @map("song_id")
  orderIndex   Int      @map("order_index")
  fanchant     String?  @db.Text
  createdAt    DateTime @default(now()) @map("created_at")
  setlistDate  String   @map("setlist_date") @db.VarChar(20)
  setlistTitle String   @map("setlist_title") @db.VarChar(300)
  songTitle    String   @map("song_title") @db.VarChar(50)
  updatedAt    DateTime @updatedAt @map("updated_at")
  setlist      Setlist  @relation(fields: [setlistId], references: [id])
  song         Song     @relation(fields: [songId], references: [id])

  @@unique([setlistId, orderIndex])
  @@index([setlistId, songId])
  @@index([songId], map: "setlist_songs_song_id_fkey")
  @@map("setlist_songs")
}

model Song {
  id            Int           @id @default(autoincrement())
  title         String        @db.VarChar(50)
  artist        String        @db.VarChar(50)
  imgUrl        String?       @map("img_url") @db.VarChar(2048)
  pronunciation String?       @db.Text
  translation   String?       @db.Text
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  lyrics        String?       @db.Text
  youtubeId     String?       @map("youtube_id") @db.VarChar(200)
  setlistSongs  SetlistSong[]

  @@map("songs")
}

model Banner {
  id        Int      @id @default(autoincrement())
  imgUrl    String?  @map("img_url") @db.VarChar(2048)
  category  String?  @db.VarChar(30)
  title     String?  @db.VarChar(50)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  content   String?  @db.VarChar(100)

  @@map("banners")
}

enum ConcertStatus {
  ONGOING
  UPCOMING
  COMPLETED
}

enum SetlistType {
  ONGOING
  PAST
  EXPECTED
}
